<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object class="GtkMenuButton" id="gtk_btnProgTracker">
        <property name="icon-name">weather-hourly-symbolic</property>

        <property name="tooltip-text" translatable="yes">Please Wait</property>
    
        <property name="popover">
            <object class="GtkPopover" id="gtk_popover">
                <child>
                    <object class="GtkBox">
                        <property name="orientation">vertical</property>

                        <child>
                            <object class="GtkLabel" id="gtk_lblDescription">
                                <property name="halign">start</property>

                                <property name="margin-start">10</property>

                                <property name="margin-top">6</property>

                                <property name="margin-end">10</property>

                                <property name="margin-bottom">6</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkProgressBar" id="gtk_progBar">
                                <property name="margin-start">10</property>

                                <property name="margin-top">10</property>

                                <property name="margin-end">10</property>

                                <property name="margin-bottom">10</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </property>
    </object>
</interface>