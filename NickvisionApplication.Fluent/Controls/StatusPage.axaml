<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fluent="using:FluentAvalonia.UI.Controls"
             xmlns:icon="using:FluentIcons.FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NickvisionApplication.Fluent.Controls.StatusPage">
    <StackPanel Orientation="Vertical" Spacing="12">
        <icon:SymbolIcon HorizontalAlignment="Center" FontSize="60" Symbol="{Binding Symbol, Mode=OneWay}"/>
        
        <TextBlock HorizontalAlignment="Center" FontSize="32" TextWrapping="Wrap" Text="{Binding Title, Mode=OneWay}"/>

        <TextBlock HorizontalAlignment="Center" Text="{Binding Description, Mode=OneWay}" TextWrapping="Wrap"/>

        <fluent:Frame HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="{Binding Child, Mode=OneWay}"/>
    </StackPanel>
</UserControl>
