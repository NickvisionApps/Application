{
    "app-id" : "org.nickvision.application",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions": [
	"org.freedesktop.Sdk.Extension.dotnet7"
    ],
    "build-options": {
    	"append-path": "/usr/lib/sdk/dotnet7/bin",
    	"append-ld-library-path": "/usr/lib/sdk/dotnet7/lib",
    	"env": {
            "PKG_CONFIG_PATH": "/app/lib/pkgconfig:/app/share/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig:/usr/lib/sdk/dotnet7/lib/pkgconfig"
    	}
    },
    "command" : "/app/opt/org.nickvision.application/NickvisionApplication.GNOME",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--filesystem=home"
    ],
    "cleanup":[
	"/include",
	"/lib/pkgconfig",
	"*.a"
    ],
    "modules" : [
        {
            "name": "org.nickvision.application",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/opt/org.nickvision.application",
                "dotnet publish NickvisionApplication.GNOME --self-contained true -o /app/opt/org.nickvision.application",
                "mkdir -p /app/share/applications",
                "cp NickvisionApplication.GNOME/org.nickvision.application.desktop /app/share/applications/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nlogozzo/NickvisionApplication.git",
                    "branch": "csharp"
                }
            ]
        }
    ]
}