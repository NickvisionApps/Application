{
    "app-id" : "org.nickvision.application",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.dotnet7",
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/dotnet7/bin:/usr/lib/sdk/rust-stable/bin",
        "append-ld-library-path": "/usr/lib/sdk/dotnet7/lib",
        "build-args" : [
            "--share=network"
        ],
        "env": {
            "PKG_CONFIG_PATH": "/app/lib/pkgconfig:/app/share/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig:/usr/lib/sdk/dotnet7/lib/pkgconfig",
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "rusttest=debug"
        }
    },
    "command" : "/app/bin/org.nickvision.application",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--filesystem=home"
    ],
    "cleanup":[
    "/include",
    "/lib/pkgconfig",
    "*.a"
    ],
    "modules" : [
        {
            "name": "just",
            "buildsystem": "simple",
            "build-commands": [
                "cargo build --release",
                "install -Dm755 target/release/just /app/bin/just"
            ],
            "cleanup": [
                "/bin/just"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/casey/just.git"
                }
            ]
        },
        {
            "name": "org.nickvision.application",
            "buildsystem": "simple",
            "build-commands": [
                "just NickvisionApplication.GNOME/ publish-flatpak"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                }
            ]
        }
    ]
}
