{
    "app-id" : "org.nickvision.application",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "org.nickvision.application",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc"
    ],
    "cleanup":[
    	"/include",
    	"/lib/debug",
	    "/lib/pkgconfig",
    	"*.a"
    ],
    "modules" : [
        {
            "name": "jsoncpp",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/open-source-parsers/jsoncpp.git",
                    "tag": "1.9.5"
                }
            ]
        },
        {
            "name": "org.nickvision.application",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbuildtype=release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nlogozzo/NickvisionApplication.git",
                    "branch": "master"
                }
            ]
        }
    ]
}