{
    "app-id" : "org.nickvision.application",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "command" : "org.nickvision.application",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc"
    ],
    "cleanup":[
        "/include",
        "/lib/pkgconfig",
        "*.a"
    ],
    "modules" : [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.10.0"
                }
            ]
        },
        {
            "name": "org.nickvision.application",
            "buildsystem": "simple",
            "build-commands": [
                "mv ./flatpak/build.sh ./build.sh",
                "chmod +x ./build.sh",
                "./build.sh"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                },
                {
                    "type": "archive",
                    "url": "https://github.com/NickvisionApps/vcpkg-store/releases/download/2024.01.23/vcpkg-linux.tar.xz",
                    "sha256": "ea152da7fe6f8313f43615f2a72cf43366ed13fa12ace73f077fb141f84c9228"
                }
            ]
        }
    ]
}