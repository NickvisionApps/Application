{
    "app-id" : "org.nickvision.application",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.dotnet7"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/dotnet7/bin",
        "append-ld-library-path": "/usr/lib/sdk/dotnet7/lib",
        "env": {
            "PKG_CONFIG_PATH": "/app/lib/pkgconfig:/app/share/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig:/usr/lib/sdk/dotnet7/lib/pkgconfig"
        }
    },
    "command" : "/app/bin/org.nickvision.application",
    "finish-args":[
        "--socket=x11",
        "--device=dri",
        "--share=ipc",
        "--filesystem=home"
    ],
    "cleanup":[
        "/include",
        "/lib/pkgconfig",
        "*.a"
    ],
    "modules" : [
        {
            "name": "org.nickvision.application",
            "buildsystem": "simple",
            "build-commands": [
                "./flatpak/build.sh fluent"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                },
                "../cake-sources.json",
                "../NickvisionApplication.Fluent/nuget-sources.json"
            ]
        }
    ]
}
