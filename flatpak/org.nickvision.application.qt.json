{
    "app-id" : "org.nickvision.application",
    "runtime" : "org.kde.Platform",
    "runtime-version" : "6.7",
    "sdk" : "org.kde.Sdk",
    "command" : "org.nickvision.application",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--talk-name=com.canonical.Unity"
    ],
    "cleanup":[
        "/include",
        "/lib/pkgconfig",
        "*.a"
    ],
    "modules" : [
        {
            "name": "jsoncpp",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/open-source-parsers/jsoncpp",
                    "tag": "1.9.5"
                }
            ]
        },
        {
            "name": "libsecret",
            "buildsystem": "meson",
            "config-opts": [
                "-Dmanpage=false",
                "-Dvapi=false",
                "-Dgtk_doc=false",
                "-Dintrospection=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libsecret",
                    "tag": "0.21.4"
                }
            ]
        },
        {
            "name": "maddy",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/include/maddy",
                "mv include/maddy/* /app/include/maddy"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/progsource/maddy",
                    "tag": "1.3.0"
                }
            ]
        },
        {
            "name": "libnick",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nickvisionapps/libnick",
                    "tag": "2024.8.2"
                }
            ]
        },
        {
            "name": "org.nickvision.application",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DUI_PLATFORM=qt"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                }
            ]
        }
    ]
}
